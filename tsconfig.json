{
    "compilerOptions":  {
                            "module":  "commonjs",
                            "target":  "ES2020",
                            "outDir":  "out",
                            "lib":  [
                                        "ES2020",
                                        "DOM"
                                    ],
                            "sourceMap":  true,
                            "rootDir":  "src",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "resolveJsonModule":  true,
                            "moduleResolution":  "node",
                            "allowSyntheticDefaultImports":  true,
                            "experimentalDecorators":  true,
                            "emitDecoratorMetadata":  true,
                            "types":  [
                                          "node",
                                          "vscode",
                                          "jest"
                                      ]
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    ".vscode-test",
                    "out",
                    "test"
                ]
}
