{
  "name": "mcp-server-builder",
  "displayName": "MCP Server Builder",
  "description": "A VS Code extension that enables developers to create Model Context Protocol (MCP) servers through natural language descriptions.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:mcp-server-builder.createServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-server-builder.createServer",
        "title": "Create MCP Server",
        "category": "MCP Server Builder"
      },
      {
        "command": "mcp-server-builder.openWebview",
        "title": "Open MCP Server Builder",
        "category": "MCP Server Builder"
      }
    ],
    "configuration": {
      "title": "MCP Server Builder",
      "properties": {
        "mcpServerBuilder.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for code generation",
          "scope": "application"
        },
        "mcpServerBuilder.defaultLanguage": {
          "type": "string",
          "enum": [
            "typescript",
            "javascript",
            "python"
          ],
          "default": "typescript",
          "description": "Default programming language for generated MCP servers"
        },
        "mcpServerBuilder.defaultTransport": {
          "type": "string",
          "enum": [
            "stdio",
            "sse"
          ],
          "default": "stdio",
          "description": "Default transport type for generated MCP servers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "tsc -p ./tsconfig.test.json && node ./out/test/runTest.js",
    "test:simple": "node test/simple-test.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "jest": "^29.0.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.5.0",
    "handlebars": "^4.7.0",
    "openai": "^4.0.0",
    "zod": "^3.22.0"
  },
  "keywords": [
    "mcp",
    "model context protocol",
    "ai",
    "code generation",
    "server",
    "typescript",
    "javascript",
    "python"
  ],
  "author": "MCP Server Builder Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mcp-server-builder.git"
  },
  "publisher": "mcp-server-builder",
  "type": "commonjs"
}
